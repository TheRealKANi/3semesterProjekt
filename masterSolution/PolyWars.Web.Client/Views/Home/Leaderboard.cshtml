    .row {
        position: relative;
        display: block;
        width: 55%;
        height: 40px;
        border-bottom: 2px solid #AFAFAF;
    }

    .name {
        position: relative;
        display: inline-block;
        width: 75%;
        line-height: 45px;
    }

    .score {
        position: relative;
        display: inline-block;
        width: 25%;
    }

    .row:nth-child(1) {
        background: gold;
    }

    .row:nth-child(2) {
        background: #c0c0c0;
    }

    .row:nth-child(3) {
        background: #cd7f32;
    }
</style>
