@{
    ViewBag.Title = "Leaderboard";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<style>
    .scores {
        background-color: white;
        width: 600px;
        height: 300px;
        overflow-y: scroll;
        position: center;
        border: 5px solid black;
        overflow-x: hidden;
        margin-top: 5vh;
    }
</style>

<style>
    /*.container {
