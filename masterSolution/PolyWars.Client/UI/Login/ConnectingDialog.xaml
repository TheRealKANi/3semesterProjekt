<UserControl x:Class="PolyWars.Client.UI.Login.ConnectingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PolyWars.Client.UI.Login"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="320"
             Name="this">
    <Grid Background="White">
        <TextBlock Name="DialogTextBlock" DataContext="{Binding ElementName=this}" Text="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" FontSize="16"/>
    </Grid>
</UserControl>
