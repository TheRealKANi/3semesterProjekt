<Page x:Class="PolyWars.UI.StartPage.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyWars.UI.StartPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Page.Resources>
        <local:StartPage_ViewModel x:Key="viewModel"/>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <Binding Source="{StaticResource viewModel}"/>
    </Page.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Start Game" Command="{Binding StartGame_Command}"/>
            <Button Content="Login" Command="{Binding Login_Command}"/>
            <Button Content="Settings" Command="{Binding Settings_Command}"/>
        </StackPanel>
    </Grid>
</Page>
